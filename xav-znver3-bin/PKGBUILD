microarch="znver3"
pkgname="xav-${microarch}-bin"
pkgver="0.1.0"
pkgrel="1"
pkgdesc="eXtreme AOMedia Video: The Most Efficient Chunked or Target Quality AV1/AV2 Encoding Framework"
arch=("x86_64")
url="https://github.com/emrakyz/xav"
license=("MIT")
depends=("svt-av1" "mkvtoolnix-cli")
optdepends=("vship: for target quality encoding features")
provides=("xav")
conflicts=("xav")
source=("https://github.com/emrakyz/xav/releases/download/v${pkgver}/xav-v${pkgver}_${microarch}.tar.xz")
sha256sums=('4d3b59457136f6eb4633eb8486bbd02a0f31aa894734979fbd6ee5132413b60e')

package() {
    cd "${srcdir}"
    install -Dm755 "xav" "${pkgdir}/usr/bin/xav"
}
